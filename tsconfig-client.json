{
	"compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "sourceMap": true,
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strict": false,
        "baseUrl": ".",
        "baseUrl": "./src",
        "outDir": "./dist",
        "paths": {
            "~/*": ["client/*"],
            "@shared/*": ["shared/*"]
        }
    },
	"typeRoots": [
		"node_modules/@types",
		"node_module/phaser/types"
	],
	"types": [
		"phaser"
	],
    "include": [
	    "./src/client/**/*",
	    "./src/shared/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
