{
	"compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "sourceMap": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "skipLibCheck": true,
        "paths": {
            "~/*": ["src/client/*"],
            "~/server/*": ["src/server/*"],
            "@shared/*": ["src/shared/*"]
        }
    },
	"typeRoots": [
		"node_modules/@types",
		"node_module/phaser/types"
	],
	"types": [
		"phaser"
	],
    "include": [
	    "./src/**/*",
    ],
    "exclude": [
        "node_module"
    ]
}


