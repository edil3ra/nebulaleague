{
	"compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "strictNullChecks": true,
        "sourceMap": true,
        "strict": false,
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "~/server/*": ["server/*"],
            "@shared/*": ["shared/*"]
        }
    },
	"typeRoots": [
		"node_modules/@types",
		"node_module/phaser/types"
	],
    "include": [
	    "./src/server/**/*",
	    "./src/shared/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}


