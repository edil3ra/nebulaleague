{
	"compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "noImplicitAny": false,
        "sourceMap": true,
        "noImplicitAny": false,
        "allowJs": true,
        "strict": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/server/*"],
            "@shared/*": ["src/shared/*"]
        },
    },
	"typeRoots": [
		"node_modules/@types",
		"node_module/phaser/types"
	],
	"types": [
		"phaser"
	],
    "include": [
	    "./src/server/**/*",
	    "./src/shared/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}


